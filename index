// INITIAL LOAD
document.getElementById("screen").innerHTML = passwordScreen;

function checkPassword(){
  const input=document.getElementById("passwordInput").value;
  const error=document.getElementById("error");
  if(input===correctPassword){
    index=0;
    document.getElementById("screen").innerHTML=screens[index];
    index++;
  }else{
    heartRate+=8;
    error.innerHTML=`‚ùå Wrong password‚Ä¶ heart rate increasing üíì (${heartRate} bpm)`;
  }
}

function next(){
  if(index<screens.length){
    document.getElementById("screen").innerHTML=screens[index];
    index++;
  }
}

function yes(){
  document.getElementById("heartbeat").play();
  confetti({particleCount:160,spread:80,origin:{y:.6}});
  index=5;
  document.getElementById("screen").innerHTML=screens[5];
}
